    // inicializa td que precisa
    @BeforeEach
    public void setup() throws InterruptedException {
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
        driver.manage().window().maximize();
        wait = new WebDriverWait(driver, TIMEOUT);
        js = (JavascriptExecutor) driver;

        driver.get(URL_BASE);
        js.executeScript("window.localStorage.setItem(arguments[0], arguments[1]);",
                FIREBASE_KEY, FIREBASE_VALUE);
        driver.navigate().refresh();
        Thread.sleep(2000);
    }

    @AfterEach
    public void teardown() {
        if (driver != null) {
            // driver.quit();
        }
    }

    @Test
    public void ct38_listarVideosNaHome() {
        // espera o iframe espec√≠fico aparecer
        By iframeYoutube = By.cssSelector("iframe[src*='youtube.com/embed']");
        wait.until(ExpectedConditions.presenceOfElementLocated(iframeYoutube));

        List<WebElement> iframes = driver.findElements(iframeYoutube);

        System.out.println("üé• Quantidade de v√≠deos encontrados: " + iframes.size());

        assertTrue(iframes.size() > 0, "Nenhum v√≠deo encontrado na Home.");

        // confirma visualiza√ß√£o rolando at√© o primeiro
        WebElement primeiro = iframes.get(0);
        js.executeScript("arguments[0].scrollIntoView({block:'center'});", primeiro);
        assertTrue(primeiro.isDisplayed(), "O v√≠deo n√£o est√° vis√≠vel na Home.");
    }
}
