    @BeforeEach
    public void setup() throws Exception {
        WebDriverManager.chromedriver().setup();
        driver = new ChromeDriver();
        driver.manage().window().maximize();

        wait = new WebDriverWait(driver, TIMEOUT);
        js   = (JavascriptExecutor) driver;

        // login via localStorage
        driver.get(URL_BASE);
        js.executeScript(
                "window.localStorage.setItem(arguments[0], arguments[1]);",
                FIREBASE_KEY, FIREBASE_VALUE
        );

        driver.navigate().refresh();
        Thread.sleep(3000);
    }

    @AfterEach
    public void teardown() {
        if (driver != null) {
            // driver.quit();
        }
    }




    // ====================== TESTE ======================

    @Test
    public void ct24_excluirAvaliacao() {
        // vou usar esses valores só como exemplo
        String nomeCurso     = "curso - gp08";
        String nomeAvaliacao = "teste";   // exatamente como aparece na tabela

        abrirMenuPerfilEIrParaGerenciamento();
        clicarGerenciarCurso(nomeCurso);
        irParaAbaAvaliacoes();

        excluirAvaliacaoPorNome(nomeAvaliacao);

        System.out.println("✓ A exclusão foi de fato executada.");
    }

    // ====================== HELPERS ======================

    private void abrirMenuPerfilEIrParaGerenciamento() {
        WebElement profileBtn = wait.until(ExpectedConditions.elementToBeClickable(
                By.cssSelector("button[aria-label='Configurações da Conta']")));
        js.executeScript("arguments[0].click();", profileBtn);

        WebElement item = wait.until(ExpectedConditions.elementToBeClickable(
                By.xpath("//li[normalize-space()='Gerenciamento de Cursos']")));
        item.click();

        wait.until(ExpectedConditions.urlContains("/manage-courses"));
    }





    private void clicarGerenciarCurso(String nomeParcialCurso) {

        By cardLocator = By.xpath(
                "//h6[contains(normalize-space(),'" + nomeParcialCurso + "')]" +
                        "/ancestor::div[contains(@class,'MuiCardContent-root')]" +
                        "/ancestor::div[contains(@class,'MuiPaper-root')]"
        );

        WebElement card = wait.until(ExpectedConditions.presenceOfElementLocated(cardLocator));

        WebElement btn = card.findElement(
                By.xpath(".//button[contains(.,'Gerenciar Curso')]"));

        js.executeScript("arguments[0].scrollIntoView({block:'center'})", btn);
        js.executeScript("arguments[0].click();", btn);

        wait.until(ExpectedConditions.urlContains("/adm-cursos"));
    }





    private void irParaAbaAvaliacoes() {
        WebElement btn = wait.until(ExpectedConditions.elementToBeClickable(
                By.xpath("//button[contains(text(),'Avaliações')]")
        ));
        js.executeScript("arguments[0].click();", btn);
    }






    private void excluirAvaliacaoPorNome(String nomeAvaliacao) {
        try {
            // linha da tabela q têm o nome da avaliação
            By linhaLocator = By.xpath(
                    "//tr[.//td[normalize-space()='" + nomeAvaliacao + "']]"
            );

            WebElement linha = wait.until(
                    ExpectedConditions.presenceOfElementLocated(linhaLocator)
            );

            // icone da lixeira dentro da linha
            WebElement svgDelete = linha.findElement(
                    By.cssSelector("svg[data-testid='DeleteIcon']")
            );

            // sobe pro botao pai
            WebElement botaoExcluir = (WebElement) js.executeScript(
                    "return arguments[0].closest('button');",
                    svgDelete
            );

            js.executeScript("arguments[0].scrollIntoView({block:'center'})", botaoExcluir);
            js.executeScript("arguments[0].click();", botaoExcluir);

                                                                // só pra confirmar o modal
            By botaoConfirmar = By.xpath("//button[contains(text(),'Excluir') or contains(text(),'Confirmar')]");
            WebElement confirmar = wait.until(ExpectedConditions.elementToBeClickable(botaoConfirmar));
            js.executeScript("arguments[0].click();", confirmar);



        } catch (Exception e) {
            // deixei ele silencioso mas dá pra colocar a mensagem de erro caso não tenha uma avaliação ou algo assim
        }
    }

}
